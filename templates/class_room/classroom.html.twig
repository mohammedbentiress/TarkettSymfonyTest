{% extends 'base.html.twig' %}

{% block title %}Alta School!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Classroom {{ classRoom.classRoomCode }}</h1>
        <h2>classRoom.speciality</h2>
        <h2>classRoom.numberRoom</h2>
        <table>
            <thead>
            <tr>
                <th>
                    CIN
                </th>
                <th>
                    Nom
                </th>
                <th>
                    Pr√©nom
                </th>
                <th>
                    Date de naissance
                </th>
            </tr>
            </thead>
            <tbody>
            <tr>
                {% for student in classRoom.students %}
                    {% set diff = date(student.birthDate|date("m/d/Y")).diff(date('now'|date('d-m-Y'))) %}
                    <td> {{ student.CIN }}</td>
                    <td> {{ student.firstName |upper }}</td>
                    <td> {{ student.lasttName |upper }}</td>
                    {% if diff.y > 20 %}
                        <td style="font-weight: bold;">{{ student.birthDate|date("m/d/Y") }}</td>
                    {% else %}
                        <td>{{ student.birthDate|date("m/d/Y")  }}</td>
                    {% endif %}
                {% endfor %}
            </tr>
            </tbody>
        </table>

    </div>
{% endblock %}
